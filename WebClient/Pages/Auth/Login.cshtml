@page
@model WebClient.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="LoginDto.Username"></label>
        <input asp-for="LoginDto.Username" class="form-control" />
        <span asp-validation-for="LoginDto.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginDto.Password"></label>
        <input asp-for="LoginDto.Password" type="password" class="form-control" />
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>

    <div class="text-danger">@Model.ErrorMessage</div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
